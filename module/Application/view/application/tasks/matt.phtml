                var hpMod = delta * conBonus * obj.priority * 2;
                // priority is trivial (0.1), easy (1), medium (1.5), hard (2)
                obj.damageToUser = Math.round(hpMod * 10) / 10;
            }

            dailies.push(obj);
            allTasks.push(obj);
            if (! taskIsTagged(obj.tags)) {
