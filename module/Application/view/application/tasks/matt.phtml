function diminishingReturns(bonus, max, halfway) {
    if (! halfway) {
        halfway = max / 2;
    }
    return max * bonus / (bonus + halfway);
}


function calculateBonus(value, stat, crit, stat_scale) {
    if (! crit) {
        crit = 1;
    }
    if (! stat_scale) {
        stat_scale = 0.5;
    }
    if (value < 0) {
        value = 1;
    }
    else {
        value += 1;
    }
    return value + stat * stat_scale * crit;
}


